{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      // "*": ["node_modules/*"]
      "common/*": ["src/common/*"],
      "renderer/*": ["src/renderer/*"],
      "main/*": ["src/main/*"]
    }
  },
  "include": ["src/**/*"]
}
